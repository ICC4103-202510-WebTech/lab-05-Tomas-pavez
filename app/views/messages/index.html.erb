<div class="bg-white rounded-lg card-shadow p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">📝 Messages</h1>
    
   
    <div class="flex space-x-3">
      <%= link_to 'New Message', new_message_path, 
          class: "btn-primary text-white px-4 py-2 rounded-lg font-medium" %>
    </div>
  </div>

  <div class="overflow-x-auto">
    <table class="min-w-full table-auto">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Message</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Author</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @messages.each do |message| %>
          <tr class="hover:bg-gray-50 transition-colors duration-150">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900">
                <%= link_to "Message #{message.id}", message_path(message), 
                    class: "text-blue-600 hover:text-blue-900 hover:underline" %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-900">
                <%= message.user.first_name %> <%= message.user.last_name %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
              <% if can? :edit, message %>
                <%= link_to "Edit", edit_message_path(message), 
                    class: "text-blue-600 hover:text-blue-900 hover:underline" %>
              <% end %>
              <% if can? :destroy, message %>
                <%= link_to "Delete", message_path(message), 
                    method: :delete,
                    confirm: "Are you sure you want to delete this message?",
                    class: "text-red-600 hover:text-red-900 hover:underline ml-2" %>
              <% end %>
              <% unless can?(:edit, message) || can?(:destroy, message) %>
                <span class="text-gray-400">Read only</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>