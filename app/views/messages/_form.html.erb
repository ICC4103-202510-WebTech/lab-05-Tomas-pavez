<div class="bg-white rounded-lg card-shadow p-6 max-w-2xl mx-auto">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">📝 Message Form</h1>

  <% if @message.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-6">
      <h3 class="font-bold text-lg mb-2">Errors:</h3>
      <ul class="list-disc list-inside">
        <% @message.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @message, local: true, class: "space-y-6" do |form| %>
    <div>
      <%= form.label :body, "Message Content", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_area :body, 
          placeholder: "Write your message...", 
          rows: 4,
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-900 bg-white resize-none" %>
    </div>

    <% if @message.chat_id.nil? %>
      <div>
        <%= form.label :chat_id, "Select Chat", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.collection_select :chat_id, 
            @chats, 
            :id,
            ->(chat) { "Chat with #{chat.sender_id == current_user.id ? chat.receiver.first_name : chat.sender.first_name} (ID: #{chat.id})" },
            { prompt: "Choose a chat..." },
            { class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-900 bg-white" } %>
      </div>
    <% end %>

    <div class="flex space-x-4 pt-6">
      <%= form.submit @message.new_record? ? "Create Message" : "Update Message", 
          class: "btn-primary text-white px-6 py-2 rounded-lg font-medium flex-1" %>
      
      <%= link_to 'Back', messages_path, 
          class: "bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600 transition-colors duration-200 text-center flex-1" %>
    </div>
  <% end %>
</div>