<div class="bg-white rounded-lg card-shadow p-6">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">📝 Message ID: <%= @message.id %></h1>
  
  <div class="space-y-4 mb-8">
    <div class="bg-gray-50 rounded-lg p-4">
      <p class="text-lg"><strong>Content:</strong></p>
      <p class="text-gray-700 mt-2"><%= @message.body %></p>
    </div>
    
    <div class="bg-gray-50 rounded-lg p-4">
      <p class="text-lg"><strong>User who sent it:</strong></p>
      <p class="text-gray-700 mt-2">
        <%= link_to "#{@user.first_name} #{@user.last_name}", user_path(@user),
            class: "text-blue-600 hover:text-blue-900 hover:underline" %> 
        (ID: <%= @user.id %>)
      </p>
    </div>
    
    <div class="bg-gray-50 rounded-lg p-4">
      <p class="text-lg"><strong>Associated chat:</strong></p>
      <p class="text-gray-700 mt-2">
        <%= link_to "Chat ID: #{@chat.id}", chat_path(@chat),
            class: "text-blue-600 hover:text-blue-900 hover:underline" %>
      </p>
    </div>
  </div>

  
  <div class="flex space-x-4">
    <% if can? :edit, @message %>
      <%= link_to "Edit Message", edit_message_path(@message),
          class: "btn-primary text-white px-6 py-2 rounded-lg font-medium" %>
    <% end %>

    <% if can? :destroy, @message %>
      <%= link_to "Delete Message", message_path(@message), 
          method: :delete,
          confirm: "Are you sure you want to delete this message?",
          class: "bg-red-500 text-white px-6 py-2 rounded-lg hover:bg-red-600 transition-colors duration-200 font-medium" %>
    <% end %>

    <%= link_to "Back", messages_path,
        class: "bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600 transition-colors duration-200 font-medium" %>
  </div>

  <% unless can?(:edit, @message) || can?(:destroy, @message) %>
    <div class="mt-6 bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded-lg">
      <strong>Note:</strong> You can only view this message. You don't have permission to edit or delete it.
    </div>
  <% end %>
</div>
