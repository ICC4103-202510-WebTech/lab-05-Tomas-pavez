<div class="bg-white rounded-lg card-shadow p-6 max-w-2xl mx-auto">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">ðŸ’¬ Chat Form</h1>

  <% if @chat.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-6">
      <h3 class="font-bold text-lg mb-2">Errors:</h3>
      <ul class="list-disc list-inside">
        <% @chat.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @chat, local: true, class: "space-y-6" do |form| %>
    <div>
      <%= form.label :receiver_id, "Select User to Chat With", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.collection_select :receiver_id, 
          User.where.not(id: current_user.id), 
          :id, 
          ->(user) { "#{user.first_name} #{user.last_name}" },
          { prompt: "Choose a user..." },
          { class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-900 bg-white" } %>
    </div>

    <div class="flex space-x-4 pt-6">
      <%= form.submit @chat.new_record? ? "Create Chat" : "Update Chat", 
          class: "btn-primary text-white px-6 py-2 rounded-lg font-medium flex-1" %>
      
      <%= link_to 'Back', chats_path, 
          class: "bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600 transition-colors duration-200 text-center flex-1" %>
    </div>
  <% end %>
</div>